<%= link_to(user) do %>
<article class="container d-flex">
  <div class="img-container border-style">
    <img src="<%= user.photo %>" alt="<%= user.name  %>'s Photo" class="profile">
  </div>
  <div class="user-details d-flex border-style">
    <h1 class="user-name"><%= user.name %></h1>
    <p class="number-of-posts">Number of Posts: <%= user.posts_count %></p>
  </div>
</article>
<% end %>